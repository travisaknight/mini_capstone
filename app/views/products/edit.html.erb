<h1>Please edit this listing.</h1>
<% if @product && @product.errors.any? %>
  <%= @product.errors.full_messages %>
<% end %>
<form action = "/products/<%=@product.id %>" method="post">
  <input type="hidden" name="_method" value="patch" />
  <div>
    Plant Name: <input type="text" name="name" value = "<%= @product.name %>">
  </div>
  <div>
    Price: <input type="text" name="price" value = "<%= @product.price %>">
  </div>
  <div>
    Description: <input type="text" name="description" value = "<%= @product.description %>">
  </div>
  <div>
     Choose a supplier:
    <select name="user_id">
      <% @suppliers.each do |supplier| %>
        <option value="<%= supplier.id %>"><%= supplier.name %></option>
      <% end %>
    </select>
  </div>
  <input type = "submit" value = "Create Product">
</form>